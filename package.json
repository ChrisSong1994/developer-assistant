{
  "name": "developer-assistant",
  "version": "0.0.1",
  "private": true,
  "description": "前端开发助手",
  "author": "ChrisSong",
  "scripts": {
    "build:icon": "electron-icon-builder --input=./resource/images/logo.png --output=./resource/images --flatten ",
    "dev": "cross-env APP_ROOT=src/renderer umi dev electron",
    "electron:build:linux": "cross-env APP_ROOT=src/renderer umi build electron --linux",
    "electron:build:mac": "cross-env APP_ROOT=src/renderer umi build electron --mac",
    "electron:build:win": "cross-env APP_ROOT=src/renderer umi build electron --win",
    "electron:dev": "cross-env APP_ROOT=src/renderer umi dev electron",
    "electron:init": "umi electron init",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,less,md}\"",
    "rebuild-deps": "electron-builder install-app-deps",
    "render:build": "cross-env APP_ROOT=src/renderer umi build",
    "render:dev": "cross-env APP_ROOT=src/renderer umi dev",
    "start": "yarn electron:dev"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@chrissong/suger": "^0.0.1",
    "@emotion/css": "^11.10.5",
    "@types/react-color": "^3.0.6",
    "electron-log": "^4.4.7",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "json5": "^2.2.3",
    "lodash": "^4.17.21",
    "parse-json": "^6.0.2",
    "react": "^18.1.0",
    "react-ace": "^10.1.0",
    "react-color": "^2.19.3",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.1.0",
    "react-json-view": "^1.21.3",
    "umi": "^3.5.24"
  },
  "devDependencies": {
    "@types/node": "^16.11.26",
    "@types/react": "^17.0.0",
    "@types/react-copy-to-clipboard": "^5.0.2",
    "@types/react-dom": "^17.0.0",
    "@umijs/fabric": "^2.10.0",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.5.24",
    "cross-env": "^7.0.3",
    "electron": "^18.3.9",
    "electron-builder": "^23.0.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-icon-builder": "^2.0.1",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.0",
    "typescript": "^4.1.2",
    "umi-plugin-electron-builder": "^2.1.18",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  }
}
