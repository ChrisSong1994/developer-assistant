    "highlight.js": "^11.11.1",
    "jotai": "^2.2.2",
    "jsonlint-mod": "^1.7.6",
    "lodash": "^4.17.21",
    "lowdb": "^5.1.0",
    "moment": "^2.30.1",
    "qrcode-reader": "^1.0.4",
    "qrcode.react": "^3.1.0",
    "react": "^18.1.0",
    "react-color": "^2.19.3",
    "react-copy-to-clipboard": "^5.1.0",
