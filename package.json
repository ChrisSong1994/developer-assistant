{
  "name": "developer-assistant",
  "version": "0.0.4",
  "private": true,
  "description": "前端开发者助手",
  "main": "main.js",
  "author": "ChrisSong1994<18557511748@163.com>",
  "repository": "https://github.com/ChrisSong1994/developer-assistant",
  "scripts": {
    "start": "cross-env NODE_ENV=development  electron ./build/main.js",
    "dev": "npm run clean:build && concurrently \"npm run dev:renderer\"  \"npm run dev:main\"",
    "clean:build": "rimraf ./build/*",
    "dev:renderer": "cross-env NODE_ENV=development rspack serve -c rspack.render.config.ts",
    "build:renderer": "cross-env NODE_ENV=production rspack build -c rspack.render.config.ts",
    "dev:main": "cross-env NODE_ENV=development rspack build -c  rspack.main.config.ts -w",
    "build:main": "cross-env NODE_ENV=production rspack build -c rspack.main.config.ts",
    "build": "npm run build:renderer && npm run build:main",
    "build:icon": "electron-icon-builder --input=./resource/images/logo.png --output=./resource/images --flatten ",
    "make": "node scripts/make.js",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,less,md}\"",
    "rebuild-deps": "electron-builder install-app-deps",
    "doc:build": "rspress build -c rspress.website.config.ts",
    "doc:dev": "rspress dev -c rspress.website.config.ts",
    "doc:preview": "rspress preview -c rspress.website.config.ts"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "4",
    "@bytemd/plugin-breaks": "^1.22.0",
    "@bytemd/plugin-frontmatter": "^1.22.0",
    "@bytemd/plugin-gemoji": "^1.22.0",
    "@bytemd/plugin-gfm": "^1.22.0",
    "@bytemd/plugin-highlight": "^1.22.0",
    "@bytemd/plugin-math": "^1.22.0",
    "@bytemd/plugin-medium-zoom": "^1.22.0",
    "@bytemd/plugin-mermaid": "^1.22.0",
    "@bytemd/react": "^1.22.0",
    "@emotion/css": "^11.10.5",
    "@monaco-editor/react": "^4.5.0",
    "@types/crypto-js": "^4.1.1",
    "@types/react-color": "^3.0.6",
    "Base64": "^1.2.0",
    "antd": "4",
    "bytemd": "^1.22.0",
    "crypto-js": "^4.1.1",
    "electron-devtools-installer": "^4.0.0",
    "electron-is-dev": "^3.0.1",
    "eventemitter3": "^5.0.1",
    "fs-extra": "^10.1.0",
